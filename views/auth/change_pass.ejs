
<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../base/head'); %>
</head>

<body>

<header>
    <%- include('../base/navegation', {variant:'user'}); %>
</header>

<section class="container">

    <%- include('../base/message'); %>

    <div class="conteiner p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Cambiar la contraseña</h3>
                    </div>
                    <div class="card-body">
                        <form action="/change-pass" method="POST">

                            <div class="form-group mt-2">
                                <input type="password" name="password" placeholder="&#x1F512; Contraseña" required class="form-control border border-danger" autofocus>
                            </div>


                            <div class="input-group mt-2">
                                <input type="password" name="new_pass" placeholder="&#x1F512; Nueva Contraseña" required class="form-control border border-danger">
                                <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1" data-toggle="tooltip" data-placement="top"
                                      title="El nombre de usuario sera pedido cada vez que quiera ingresar.">?</span>
                                </div>
                            </div>


                            <div class="input-group mt-2">
                                <input type="password" name="new_pass_confirmation" placeholder="&#x1F512; Confirmar Contraseña" required class="form-control border border-danger">
                                <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1" data-toggle="tooltip" data-placement="top"
                                      title="Debe contener mínimo 8 caracteres, una letra en mayúscula, una minúscula y al menos un número.">?</span>
                                </div>
                            </div>

                            

                            <div class="form-group mt-5">
                                <button class="btn btn-success btn-block rounded-pill">
                                    Cambiar
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


<%- include('../base/footer'); %>

<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>

</html>